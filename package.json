{
  "name": "jarvis-api-client",
  "displayName": "Jarvis API Client",
  "description": "A powerful API testing tool with Thunder Client workflow and Next.js-inspired UI",
  "version": "1.0.0",
  "publisher": "jarvis",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:jarvis-api-client.sidebar"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "jarvis-api-client",
          "title": "Jarvis API Client",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "jarvis-api-client": [
        {
          "type": "webview",
          "id": "jarvis-api-client.sidebar",
          "name": "API Client"
        }
      ]
    },
    "commands": [
      {
        "command": "jarvis-api-client.openClient",
        "title": "Open Jarvis API Client"
      },
      {
        "command": "jarvis-api-client.sendRequest",
        "title": "Send Request"
      },
      {
        "command": "jarvis-api-client.newRequest",
        "title": "New Request"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run build:extension && npm run build:webview",
    "build:extension": "tsc -p ./",
    "build:webview": "cd webview && npm run build",
    "watch": "concurrently \"tsc -watch -p ./\" \"cd webview && npm run dev\"",
    "pretest": "npm run build && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "install:all": "npm install && cd webview && npm install"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.0.0",
    "typescript": "^4.9.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
